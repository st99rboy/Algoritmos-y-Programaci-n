// Algoritmo que calcule la longitud y area de una circunferencia
Algoritmo SEC07
	
	Definir Radio Como Real;
	
	Escribir "Introduzca el radio: ";
	Leer Radio;
	
	Escribir "La longitud de la circunferencia: ", 2 * Pi * Radio;
	Escribir "El area de la circunferencia es: ", Radio * Pi^2;
	
FinAlgoritmo
